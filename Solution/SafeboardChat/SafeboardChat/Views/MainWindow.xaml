<Window x:Class="SafeboardChat.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SafeboardChat.ViewModels"
        xmlns:views="clr-namespace:SafeboardChat.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="403" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <views:ChatChooser x:Name="ChatChooserFragment" Grid.Column="0" Margin="5"/>
        <views:ChatFragment x:Name="ChatFragment" ViewModel="{Binding ChatChooserViewModel.ChatFragmentViewModel, Mode=OneWay}"  Grid.Column="1" Margin="0,5,5,5"/>
     
    </Grid>
</Window>
